{
  "name": "deacon-server",
  "version": "0.1.0",
  "private": true,
  "description": "Deacon server app",
  "license": "MIT",
  "author": "Ralph Mack",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "npx tsc",
    "build:prod": "npx tsc",
    "lint": "npx eslint .",
    "docs": "npx jsdoc -c ./jsdoc.json",
    "start": "npx tsc && node ./src/app.js",
    "debug": "npx tsc && node --inspect-brk=36942 ./src/app.js",
    "test": "npx tsc && mocha test/**/*",
    "coverage": "npx nyc -r HTML mocha test/**/*",
    "debug:test": "npx tsc && npx mocha --inspect-brk=36942 test/**/*"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.6.0",
    "eslint-plugin-node": "^10.0.0",
    "jsdoc": "^3.6.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "npm": "^6.1.0",
    "nyc": "^14.1.1",
    "typedoc": "^0.15.2",
    "typescript": "^3.7.2"
  },
  "engines": {
    "node": "^4.5 || 6.* || >= 7.*"
  },
  "main": "app.js",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "pg": "^7.4.3"
  }
}
