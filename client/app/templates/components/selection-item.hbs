{{#if itempress}}
<div class='selection-item' 
    {{action itemclick}} 
    {{action itemclick on="tap"}}
    {{action itempress on="longPress"}}>
        {{fa-icon icon size="2x"}}
        <div class='selection-item-text'>{{text}}</div>
</div>
{{else}}
<div class='selection-item' 
    {{action itemclick}} 
    {{action itemclick on="tap"}} >
        {{fa-icon icon size="2x"}}
        <div class='selection-item-text'>{{text}}</div>
</div>
{{/if}}
